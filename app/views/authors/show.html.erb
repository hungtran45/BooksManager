<div class="panel panel-primary">
	<div class="panel-heading">
		Author's Details
	</div>
	<div class="panel-body view_details">		 
    <form class="form-horizontal">
      <div class="form-group">
        <label class="col-sm-2 control-label label label-primary">Name:</label>
        <div class="col-sm-10">
          <label class="control-label details"><%= @author.name %></label>
        </div>
      </div>
      <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label label label-primary">Email:</label>
        <div class="col-sm-10">
          <label class="control-label details"><%= @author.email %></label>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <% if current_user.has_role? :admin %>
            <%= link_to edit_author_path(@author), :class => 'btn btn-primary'  do %>
              <span class="glyphicon glyphicon-pencil"></span> Edit
            <% end %>
          <% end %>
          <%= link_to authors_path, class: 'btn btn-default btn-md' do %>
            <span class="glyphicon glyphicon-arrow-left"></span> Back
          <% end %>
        </div>
      </div>
    </form>
	</div>
</div>