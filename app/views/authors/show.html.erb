<div class="panel panel-primary">
	<div class="panel-heading">
		<%= t('.author_details')%>
	</div>
	<div class="panel-body view_details">		 
    <form class="form-horizontal">
      <div class="form-group">
        <label class="col-sm-2 control-label label label-primary"><%= t('.name')%></label>
        <div class="col-sm-10">
          <label class="control-label details"><%= @author.name %></label>
        </div>
      </div>
      <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label label label-primary"><%= t('.email')%></label>
        <div class="col-sm-10">
          <label class="control-label details"><%= @author.email %></label>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <% if current_user.has_role? :admin %>
            <%= link_to edit_author_path(@author), :class => 'btn btn-primary'  do %>
              <span class="glyphicon glyphicon-pencil"></span> <%= t('.edit')%>
            <% end %>
          <% end %>
          <%= link_to authors_path, class: 'btn btn-default btn-md' do %>
            <span class="glyphicon glyphicon-arrow-left"></span> <%= t('.back')%>
          <% end %>
        </div>
      </div>
    </form>
	</div>
</div>