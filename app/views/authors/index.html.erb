<div class="panel panel-primary listAuthor">
  <div class="panel-heading">
    Listing Authors
  </div>
  <div class="panel-body">
    <table class="table table-striped table-hover authorTable">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @authors.each do |author| %>
        <tr>
          <td><%= link_to author.name, author, class: "authorName", title: "View " + author.name + " details", "data-placement" => "bottom" %></td>
          <td><%= author.email %></td>
          <td>
            <%= link_to edit_author_path(author), title: "Edit", "data-placement" => "bottom" do %>
            <span class="glyphicon glyphicon-pencil"></span>
            <% end %>
          </td>
          <td>
            <%= link_to author, method: :delete, data: { confirm: 'Are you sure?' }, title: "Delete", "data-placement" => "bottom"  do %>
            <span class="glyphicon glyphicon-remove"></span>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to new_author_path, class: 'btn btn-primary btn-md' do %>
    <span class="glyphicon glyphicon-plus"></span> <span id="new_author">New Author</span>
    <% end %>
  </div>
</div>