<div class="panel panel-primary listBook">
  <div class="panel-heading">
    Listing Books
  </div>
  <div class="panel-body">
    <table class="table table-striped table-hover table-responsive bookTable">
      <thead>
        <tr>
          <th>Author</th>
          <th>Title</th>
          <th>Year</th>
          <th>Category</th>
          <th>Select</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.author.name %></td>
          <td><%= link_to book.title, book, class: "bookName", title: "View " + book.title + " details", "data-placement" => "bottom" %></td>
          <td><%= book.year %></td>
          <td><%= book.category.name %></td>
          <td><%= check_box_tag 'selectBook'%></td>
          <td>
            <%= link_to book, method: :delete, data: { confirm: 'Are you sure?' }, title: "Delete", "data-placement" => "bottom"  do %>
            <span class="glyphicon glyphicon-trash"></span>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to new_book_path, class: 'btn btn-primary btn-md' do %>
    <span class="glyphicon glyphicon-plus"></span> <span id="new_book">New Book</span>
    <% end %>
  </div>
</div>
