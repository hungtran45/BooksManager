<div class="panel panel-primary">
	<div class="panel-heading">
		<%= t('.book_details')%>
	</div>
	<div class="panel-body view_details">		 
    <form class="form-horizontal">
      <div class="form-group">
        <label class="col-sm-2 control-label label label-primary"><%= t('.title')%></label>
        <div class="col-sm-10">
          <label class="control-label details"><%= @book.title %></label>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label label label-primary"><%= t('.year')%></label>
        <div class="col-sm-10">
          <label class="control-label details"><%= @book.year %></label>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label label label-primary"><%= t('.category')%></label>
        <div class="col-sm-10">
          <label class="control-label details"><%= @book.category.name %></label>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label label label-primary"><%= t('.author')%></label>
        <div class="col-sm-10">
          <label class="control-label details"><%= @book.author.name %></label>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label label label-primary"><%= t('.image')%></label>
        <div class="col-sm-10">
          <%=image_tag @book.photo.url(:small), class: "img-rounded img-thumbnail" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <% if current_user.has_role? :admin %>
            <%= link_to edit_book_path(@book), :class => 'btn btn-primary'  do %>
              <span class="glyphicon glyphicon-pencil"></span> <%= t('.edit')%>
            <% end %>
          <% end %>

          <%= link_to books_path, class: 'btn btn-default btn-md' do %>
            <span class="glyphicon glyphicon-arrow-left"></span> <%= t('.back')%>
          <% end %>
        </div>
      </div>
    </form>
	</div>
</div>

