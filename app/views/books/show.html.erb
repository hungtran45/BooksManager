<div class="panel panel-primary">
	<div class="panel-heading">
		Book's Details
	</div>
	<div class="panel-body view_details">		 
    <form class="form-horizontal">
      <div class="form-group">
        <label class="col-sm-2 control-label label label-primary">Title:</label>
        <div class="col-sm-10">
          <label class="control-label details"><%= @book.title %></label>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label label label-primary">Year:</label>
        <div class="col-sm-10">
          <label class="control-label details"><%= @book.year %></label>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label label label-primary">Category:</label>
        <div class="col-sm-10">
          <label class="control-label details"><%= @book.category.name %></label>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label label label-primary">Author:</label>
        <div class="col-sm-10">
          <label class="control-label details"><%= @book.author.name %></label>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label label label-primary">Image:</label>
        <div class="col-sm-10">
          <%=image_tag @book.photo.url(:small), class: "img-rounded img-thumbnail" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <% if current_user.has_role? :admin %>
            <%= link_to edit_book_path(@book), :class => 'btn btn-primary'  do %>
              <span class="glyphicon glyphicon-pencil"></span> Edit
            <% end %>
          <% end %>

          <%= link_to books_path, class: 'btn btn-default btn-md' do %>
            <span class="glyphicon glyphicon-arrow-left"></span> Back
          <% end %>
        </div>
      </div>
    </form>
	</div>
</div>

