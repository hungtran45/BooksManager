<%= bootstrap_form_for @book, class: "form-horizontal" do |f| %>
  
  <% if @book.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h4><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h4>

    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li class="lsterror"><span class="glyphicon glyphicon-exclamation-sign"></span> <%= message %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= f.text_field :title, placeholder: "Enter the Book's title" %>
  </div>
  <div class="field">
    <%= f.select :year, (1900..(Time.zone.now.year)).sort.reverse, {prompt: 'Choose the year ...'} %>
  </div>
  <div class="field">
    <%= f.select("category_id", Category.all.collect {|c| [c.name, c.id] }.sort, {prompt: "Choose the Book's category ..."}) %>
  </div>
  <div class="field">
    <%= f.select("author_id", Author.all.collect {|a| [a.name, a.id] }.sort, {prompt: "Choose the Book's author ..."})%>
  </div>

  <div class="actions">
    <%= f.submit :class => 'btn btn-primary' %> 
    <%= link_to books_path, class: 'btn btn-default btn-md' do %>
      <span class="glyphicon glyphicon-arrow-left"></span> Back
    <% end %>
  </div>  
<% end %>
